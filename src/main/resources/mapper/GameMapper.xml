<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.larp.mapper.GameMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.larp.entity.Game">
        <id column="id" property="id"/>
        <result column="game_name" property="gameName"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="status" property="status"/>
        <result column="max_user" property="maxUser"/>
        <result column="min_user" property="minUser"/>
        <result column="clues_enable" property="cluesEnable"/>
        <result column="max_clues" property="maxClues"/>
        <result column="round" property="round"/>
        <result column="dm" property="dm"/>
        <result column="round_total" property="roundTotal"/>
        <result column="round_total" property="handbook"/>

    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, game_name, description, create_time, status, max_user, min_user, clues_enable, max_clues, round,
        dm,round_total,handbook
    </sql>

</mapper>
